{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Vonage Media Processor",
    "compilerOptions": {
        "outDir": "dist",
        "lib": [
            "es2020",
            "es2020.promise",
            "es2020.bigint",
            "es2020.string",
            "DOM",
            "WebWorker"
        ],
        "module": "commonjs",
        "target": "es2020",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "allowJs": true
    }
}